<Window x:Class="XmlBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <XmlDataProvider x:Key="data" Source="data.xml" XPath="/Sites/Target"/>
    </Window.Resources>
    <Grid>
        <DataGrid DataContext="{StaticResource data}" AutoGenerateColumns="False" ItemsSource="{Binding XPath=/Sites/Target}" HorizontalAlignment="Left" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding XPath=Id}" ClipboardContentBinding="{x:Null}"/>
                <DataGridTextColumn Binding="{Binding XPath=Name}" ClipboardContentBinding="{x:Null}"/>
                
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
